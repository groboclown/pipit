{
  "name": "pipit",
  "version": "0.0.0",
  "description": "Mock AWS testing",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha",
    "jscs": "jscs admin api bin/www lib app.js",
    "jshint": "jshint",
    "pretest": "jscs admin api bin/www lib app.js && jshint admin api bin/www lib app.js",
    "gen-boilerplate": "bin/build-api.py node_modules/aws-sdk/apis/ api/"
  },
  "config": {
    "port": "3000"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/groboclown/pipit.git"
  },
  "keywords": [
    "test",
    "aws",
    "mock",
    "lambda"
  ],
  "engines": {
    "node": "0.10.25"
  },
  "author": "Groboclown",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/groboclown/pipit/issues"
  },
  "dependencies": {
    "aws-sdk": "^2.3.10",
    "body-parser": "~1.14.2",
    "chokidar": "~1.4.3",
    "cookie-parser": "~1.3.5",
    "crypto": "~0.0.3",
    "debug": "~2.2.0",
    "express": "~4.13.4",
    "express-xml-bodyparser": "~0.2.2",
    "mkdirp": "~0.5.1",
    "q": "^1.4.1",
    "tmp": "~0.0.28",
    "uuid": "~2.0.1",
    "xml2js": "^0.4.16",
    "yauzl": "~2.4.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "jscs": "^2.11.0",
    "jshint": "^2.9.2",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.3"
  },
  "pre-commit": [
    "jshint",
    "jscs"
  ],
  "jscsConfig": {
    "preset": "node-style-guide",
    "excludeFiles": ["nothing-to-exclude"],
    "requireCurlyBraces": true,
    "requirePaddingNewLinesAfterUseStrict": true,
    "validateLineBreaks": false,
    "maximumLineLength": {
        "value": 280,
        "allExcept": [
          "urlComments",
          "functionSignature",
          "require",
          "regex"
        ]
    }
  },
  "jshintConfig": {
    "node": true,
    "esversion": 6,
    "sub": true,
    "strict": "global",
    "laxbreak": true
  }
}
